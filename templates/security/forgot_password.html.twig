{% extends 'base.html.twig' %}

{% block title %}Snowtricks - Forgot password{% endblock %}

{% block h1 %}
    <h1 class="uk-text-uppercase">Forgot password</h1>
{% endblock %}

{% block body %}

    <div class="uk-margin-large-top uk-margin-bottom">
        {{ form_start(forgotForm) }}
            <fieldset class="uk-fieldset">

                <div class="uk-margin">
                    <div class="uk-inline uk-width-1-1">
                        <span class="uk-form-icon" uk-icon="icon: mail"></span>
                        {{ form_widget(forgotForm.email) }}
                    </div>

                    {% if not forgotForm.vars.valid %}
                        <div class="uk-alert-danger" uk-alert>
                            <a class="uk-alert-close" uk-close></a>
                            {{ form_errors(forgotForm.password) }}
                        </div>
                    {% endif %}
                </div>

            </fieldset>

            <div class="uk-text-right">
                <button type="submit" class="uk-button uk-button-secondary">Forgot password</button>
            </div>

            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >

        {{ form_end(forgotForm) }}
    </div>

{% endblock %}
