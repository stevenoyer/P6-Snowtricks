{% extends 'base.html.twig' %}

{% block title %}Snowtricks - Home{% endblock %}

{% block h1 %}
    <h1 class="uk-text-uppercase">SnowTricks</h1>
{% endblock %}

{% block body %}

    <div id="home" class="uk-margin-top">
        <h2>Bienvenue sur SnowTricks !</h2>

        <div class="uk-child-width-1-1 uk-child-width-1-2@m uk-child-width-1-3@l uk-grid-match" uk-scrollspy="target: > div; cls: uk-animation-slide-bottom-medium; delay: 200" uk-grid>
            {% for item in items %}
                <div class="uk-animation-toggle" tabindex="0">
                    {% include "shared/_trick_card.html.twig" %}
                </div>
            {% endfor %}
        </div>

        <div class="load-more uk-margin-top uk-text-center uk-padding">
            <button class="uk-button uk-button-secondary">Load more</button>
        </div>
    </div>

{% endblock %}
